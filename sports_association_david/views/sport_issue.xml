<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issues</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">tree,form,kanban</field>
        <!-- <field name="domain">[]</field> -->
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport issue
            </p>
        </field>   
    </record>

    <menuitem 
        id="sport_issue_menu" 
        name="Sport Association"  
        action="action_sport_issue" 
        sequence="90" 
        web_icon="sports_association_david,static/description/icon.png"/>

    <menuitem 
        id="sport_issue_menuitem" 
        action="action_sport_issue" 
        parent="sport_issue_menu" 
        name="Sport Issues" 
        sequence="90"/>
    
</odoo>
